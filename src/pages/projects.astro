---
import BaseLayout from '../layouts/BaseLayout.astro';
import RepoCard from '../components/repoCard.jsx';
import getRepos from '../lib/repositories';

const pageTitle = "Projects";
const repos = await getRepos();
---

<BaseLayout pageTitle={pageTitle}>
    <div class="container mt-3 mx-auto">
        <h1 class="text-5xl font-bold text-center text-slate-100">My (Most Recent) Projects</h1>
        <h1 class="text-center text-slate-100 mt-4">Full list can be found at <a class="link" href="https://github.com/thereal-cc?tab=repositories">this link</a></h1>
    </div>
    <div class="flex flex-wrap mx-0.5">
      {repos.map((repo: any) => (
          <div class="w-full md:w-1/2 lg:w-1/3 px-28 py-6">
              <RepoCard client:load repo={repo}/>
          </div>
      ))}
  </div>
</BaseLayout>